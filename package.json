{
  "name": "hv-uikit-react",
  "description": "The React component library for the Hitachi Vantara Design System.",
  "homepage": "https://github.com/lumada-design/hv-uikit-react",
  "license": "Apache-2.0",
  "private": true,
  "author": {
    "name": "Hitachi Vantara UI Kit Team"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lumada-design/hv-uikit-react.git"
  },
  "scripts": {
    "dev": "pnpm --parallel --filter=!'./tools/**'  dev",
    "doc": "start-storybook -p 6006 --no-manager-cache",
    "build": "pnpm -r build",
    "build:storybook": "build-storybook",
    "format:check": "prettier -c .",
    "format:fix": "prettier -w .",
    "type:check": "tsc --noEmit",
    "lint": "eslint . --cache",
    "lint-staged": "lint-staged",
    "clean": "npx rimraf ./**/node_modules ./**/dist",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/builder-vite": "^0.2.2",
    "@storybook/core-common": "^6.5.10",
    "@storybook/node-logger": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^29.0.1",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "babel-loader": "^8.2.5",
    "eslint": "^8.23.1",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "require-from-string": "^2.0.2",
    "ts-jest": "^29.0.0",
    "typescript": "^4.8.3",
    "vite": "^3.1.0",
    "vite-tsconfig-paths": "^3.5.0",
    "webpack": "^5.74.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --cache",
      "pretty-quick --staged"
    ]
  }
}
